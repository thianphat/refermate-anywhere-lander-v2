---
import RefermateLogo from "/Refermate.svg"
---

<div class="nav-container">
    <nav class="nav">
        <div class="logo-container">
            <img src={RefermateLogo} alt="Refermate Logo" class="refermate-logo"></img>
        </div>
        <button class="main-btn">Install for Free</button>
        <a href="#main" class="nav-item active">Welcome</a>
        <a href="#" class="nav-item">Exclusive Coupons & Cash Back</a>
        <a href="#" class="nav-item">Referral Codes and Commission</a>
        <a href="#" class="nav-item">Price Drop & Coupon Alerts</a>
        <a href="#" class="nav-item">Create Your Own Storefront</a>
        <a href="#" class="nav-item">Savings Results While You Search</a>
        <a href="#" class="nav-item">See How We Compare</a>
        <a href="#" class="nav-item">Coming Soon - New!</a>
    </nav>


</div>
<style>
    .nav-container {
        flex-grow: 0;
        min-width: 304px;
        min-height: 100%;
    }

    .nav {
        display: flex;
        gap: 2rem;
        position: fixed;
        width: 280px;
        height: 100%;
        flex-direction: column;
        justify-content: center;
        align-content: flex-end;
        background: #EEE8E1;
        opacity: 0.9;
    }

    .main-btn {
        margin: 0 auto;
    }

    .nav-item {
        padding: 1rem 2rem;
    }

    .nav-item.active {
        background-color: whitesmoke;
        font-family: sharp_groteskmedium_20, sans-serif;
    }

    a {
        text-decoration: none;
        color: unset;
    }

    .logo-container {
        margin: 0 auto;
    }

    .refermate-logo {
        width: 10rem;

    }

    button {
        padding: 1rem 2rem;
        font-family: sharp_groteskbook_25, sans-serif;
        font-size: 1rem;
        border: none;
        border-radius: 5px;
        background-color: chartreuse;
    }

</style>
