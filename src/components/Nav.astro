---
import RefermateLogo from "/Refermate.svg"

---

<div class="side">
    <div class="nav-container">
        <div class="logo">
            <img src={RefermateLogo} alt="Refermate Logo" class="refermate-logo"></img>
        </div>
        <button class="main-btn">Install for Free</button>
        <nav class="nav">
            <a href="#main" class="nav-item active">Welcome</a>
            <a href="#coupon-codes" class="nav-item">Exclusive Coupons & Cash Back</a>
            <a href="#referral-codes" class="nav-item">Referral Codes and Commission</a>
            <a href="#price-drops" class="nav-item">Price Drop & Coupon Alerts</a>
            <a href="#storefront" class="nav-item">Create Your Own Storefront</a>
            <a href="#savings-results" class="nav-item">Savings Results While You Search</a>
            <a href="#comparison" class="nav-item">See How We Compare</a>
            <a href="#coming-soon" class="nav-item">Coming Soon - New!</a>
        </nav>

    </div>


</div>
<style>
    .side {
        flex-grow: 0;
        min-width: 304px;
        min-height: 100%;
    }

    .nav-container {
        display: flex;
        gap: 1rem;
        position: fixed;
        width: 250px;
        height: 100%;
        flex-direction: column;
        justify-content: center;
        align-content: flex-end;
        background: #EEE8E1;
        opacity: 0.9;
    }

    .main-btn {
        margin: 0 auto;
    }

    .nav {
      display: flex;
        flex-direction: column;
        gap: .5rem;
    }

    .nav-item {
        padding: 1rem 2rem;
    }

    .nav-item.active {
        background-color: whitesmoke;
        font-family: sharp_groteskmedium_20, sans-serif;
    }

    a {
        text-decoration: none;
        color: unset;
    }

    .logo {
        margin: 0 auto;
    }

    .refermate-logo {
        width: 10rem;

    }

    button {
        padding: 1rem 2rem;
        font-family: sharp_groteskbook_25, sans-serif;
        font-size: 1rem;
        border: none;
        border-radius: 5px;
        background-color: chartreuse;
    }

</style>

<script>
    const buttons = document.querySelectorAll("a.nav-item")

        buttons.forEach((button) => {
            button.addEventListener('click', () => {
                console.log('Button was clicked!');
            });
        });




</script>