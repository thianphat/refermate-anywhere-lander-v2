---
import Layout from '../layouts/Layout.astro';
import Card from '../components/Card.astro';
import Nav from '../components/Nav.astro'
---

<Layout title="Refermate Anywhere - The best browser extension to save and earn money">
    <Nav/>
    <div class="main">
        <main>
            <section class="hero-content" id="main">
                <div class="hero-title">
                    <h1 class="title">The <span class="title-span">only</span> <span
                            class="title-feature-span">browser</span> extension you'll ever need
                    </h1>
                    <h2>Earn cash back and commission at over 31,000+ stores and brands.</h2>

                    <div class="tertiary-title">
                        <p>Over $25,000,000 earned and saved</p>
                        <p>Trusted by over 50,000 members</p>
                    </div>
                </div>
                <div class="hero-image">
                </div>
            </section>
            <section id="coupon-codes">
                <h2>Exclusive Coupons & Cash Back</h2>
            </section>
            <section id="referral-codes">
                <h2>Referral Codes and Commission</h2>
            </section>
            <section id="price-drops">
                <h2>Price Drop & Coupon Alerts</h2>
            </section>
            <section id="storefront">
                <h2>Create Your Own Storefront</h2>
            </section>
            <section id="savings-results">
                <h2>Savings Results While You Search</h2>
            </section>
            <section id="comparison">
                <h2>See How We Compare</h2>
            </section>
            <section id="coming-soon">
