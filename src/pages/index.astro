<style>
    .main {
        display: flex;
        flex-direction: column;
        margin-inline: 20rem 4rem;
    }

    main {
        position: relative;
        display: flex;
        flex-direction: column;
        justify-content: flex-start;
        padding-block: 4rem;
        gap: 8rem;
        min-height: 100%;

    }

    .hero-content {
        width: 100%;
        display: flex;
        flex-direction: column;
        gap: 2rem;
        align-items: flex-start;
    }

    .hero-image {
        min-width: 100%;
        min-height: 550px;
        background-color: aqua;
    }

    h1 {
        font-size: 3rem;
        font-weight: 800;
        margin: 0;
    }

    .tertiary-title {
        display: flex;
        gap: 1rem;
    }

    .title-span {
        /*font-family: "sharp_groteskmedium_italic_20", sans-serif;*/
        /*text-decoration: underline;*/
    }

    .title-feature-span {
        /*color: firebrick;*/
        /*font-family: sharp_grotesksemibold_20, sans-serif;*/
    }

    .title-buttons-container {
        display: flex;
        gap: 1rem;
    }

    .title-button {
        color: white;
        padding: .5rem 1rem;
        background-color: black;
        border-radius: 500px;
    }


    .link-card-grid {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(24ch, 1fr));
        gap: 1rem;
        padding: 0;
    }
</style>
